# Telegram Bot Configuration
TELEGRAM_TOKEN=your_telegram_bot_token_here

# Admin IDs (comma-separated list of Telegram user IDs)
ADMIN_IDS=123456789,987654321

# Database Configuration
DB_PATH=kwh_slots.db

# Wallet Limits
MAX_WALLET_KWH=10000
MAX_CREDIT_PER_OP=50000

# Allow negative balance (0 = disabled, 1 = enabled)
ALLOW_NEGATIVE=0

# Available slots (comma-separated)
SLOTS=slot1,slot3,slot5,slot8,wallet

# Credit photos storage path
CREDIT_PHOTOS_PATH=/credit_photos

# Optional: Public URL for webhook (for Railway/cloud deployment)
PUBLIC_URL=https://your-app.up.railway.app
WEBHOOK_PATH=/telegram
WEBHOOK_SECRET_TOKEN=your_secret_token_here

# Optional: Logging level
LOG_LEVEL=INFO

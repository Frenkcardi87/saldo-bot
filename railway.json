{
  "build": {
    "command": "pip install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "uvicorn serve_bot_webhook:app --host 0.0.0.0 --port ${PORT:-10000}",
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE"
  },
  "variables": {
    "PUBLIC_URL": "https://saldo-bot-production.up.railway.app",
    "DB_PATH": "/tmp/kwh_slots.db"
  }
}